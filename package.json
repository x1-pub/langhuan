{
  "name": "langhuan-trpc",
  "version": "1.0.0",
  "description": "Monorepo for Langhuan tRPC client and server applications",
  "main": "index.js",
  "scripts": {
    "dev:client": "pnpm --filter client dev",
    "dev:server": "pnpm --filter server dev",
    "dev": "run-p dev:*",
    "build:client": "pnpm --filter client build",
    "build:server": "pnpm --filter server build",
    "build:zod": "pnpm --filter server packages/zod",
    "build": "run-s build:*",
    "lint": "eslint . --fix",
    "format": "prettier --write .",
    "lint-staged": "lint-staged",
    "prepare": "husky"
  },
  "keywords": [
    "trpc",
    "monorepo",
    "pnpm",
    "vite"
  ],
  "author": "",
  "license": "MIT",
  "packageManager": "pnpm@10.16.1",
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "eslint": "^9.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.4.0",
    "husky": "^9.1.4",
    "lint-staged": "^15.2.10",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.3",
    "typescript-eslint": "^8.39.1"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,cjs,mjs}": [
      "pnpm exec eslint --max-warnings=0 --fix",
      "pnpm exec prettier --write"
    ],
    "*.{json,md,css,less,html}": [
      "pnpm exec prettier --write"
    ]
  }
}
