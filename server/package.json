{
  "name": "server",
  "version": "1.0.0",
  "description": "Fastify + tRPC backend for Langhuan",
  "main": "index.js",
  "scripts": {
    "build": "rimraf dist && tsc && tsc-alias && copyfiles .env.* dist/server",
