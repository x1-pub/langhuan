    "@trpc/server": "^11.5.1",
    "cli-table3": "^0.6.5",
    "dotenv": "^17.2.2",
    "drizzle-orm": "^0.44.5",
    "fastify": "^5.6.0",
    "ioredis": "^5.7.0",
    "lodash": "^4.17.21",
    "mongoose": "^8.18.1",
    "mysql2": "^3.15.0",
    "sequelize": "^6.37.7",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/lodash": "^4.17.21",
    "@types/node": "^24.5.0",
    "copyfiles": "^2.4.1",
    "cross-env": "^10.0.0",
